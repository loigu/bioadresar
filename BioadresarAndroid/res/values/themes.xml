<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.HnutiDuhaTheme" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.HnutiDuha.ActionBar</item>
        <item name="searchViewSearchIcon">@drawable/search_icon</item>
        <item name="searchDropdownBackground">@drawable/search_background_green</item>
    </style>

    <style name="Widget.HnutiDuha.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="titleTextStyle">@style/HnutiDuha.ActionBar.TitleTextStyle</item>
        <item name="android:background">@drawable/bar_background</item>
        <item name="background">@drawable/bar_background</item>
    </style>

    <style name="HnutiDuha.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/DuhaTextGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HnutiDuha.ActionBar.SearchTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/DuhaSearchTextGray</item>
        <item name="android:textColorHighlight">@color/DuhaSelectionBackground</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HnutiDuha.TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="HnutiDuha.HeaderMedium" parent="@style/HnutiDuha.TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HnutiDuha.InputMedium" parent="@style/HnutiDuha.TextMedium">
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="background">@drawable/field_background</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAppearance">@style/HnutiDuha.TextMedium</item>
    </style>

    <style name="HnutiDuha.SpinnerMedium" parent="@style/HnutiDuha.InputMedium">
        <item name="background">@drawable/btn_dropdown</item>
        <item name="android:background">@drawable/btn_dropdown</item>
    </style>

</resources>