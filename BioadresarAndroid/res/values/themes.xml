<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="row_height">33dp</dimen>
    <dimen name="btn_in_row_height">33dp</dimen>
    <dimen name="left_row_width">100dp</dimen>

    <style name="Theme.HnutiDuhaTheme" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.HnutiDuha.ActionBar</item>
        <item name="searchViewSearchIcon">@drawable/search_icon</item>
        <item name="searchDropdownBackground">@drawable/search_background_green</item>
    </style>

    <style name="Widget.HnutiDuha.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="titleTextStyle">@style/HnutiDuha.ActionBar.TitleTextStyle</item>
        <item name="android:background">@drawable/bar_background</item>
        <item name="background">@drawable/bar_background</item>
    </style>

    <style name="HnutiDuha.ActionBar.TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/DuhaTextGreen</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HnutiDuha.ActionBar.SearchTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/DuhaSearchTextGray</item>
        <item name="android:textColorHighlight">@color/DuhaSelectionBackground</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HnutiDuha.TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="HnutiDuha.TextMediumWhite" parent="@style/HnutiDuha.TextMedium">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="HnutiDuha.HeaderMedium" parent="@style/HnutiDuha.TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HnutiDuha.HeaderMediumWhite" parent="@style/HnutiDuha.HeaderMedium">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="HnutiDuha.TextLargeWhite" parent="@style/HnutiDuha.TextMediumWhite">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HnutiDuha.TextLarge" parent="@style/HnutiDuha.TextMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HnutiDuha.HeaderLargeWhite" parent="@style/HnutiDuha.HeaderMediumWhite">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HnutiDuha.HeaderLarge" parent="@style/HnutiDuha.HeaderMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HnutiDuha.InputMedium" parent="@style/HnutiDuha.TextMedium">
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/field_background</item>
        <item name="background">@drawable/field_background</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAppearance">@style/HnutiDuha.TextMedium</item>
    </style>

    <style name="HnutiDuha.ItemButtonMedium" parent="@style/HnutiDuha.InputMedium">
        <item name="background">@drawable/btn_item</item>
        <item name="android:background">@drawable/btn_item</item>
        <item name="android:textColor">@color/DuhaTextGray</item>
        <item name="android:height">@dimen/btn_in_row_height</item>
        <item name="android:layout_height">@dimen/btn_in_row_height</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="HnutiDuha.SpinnerMedium" parent="@style/HnutiDuha.ItemButtonMedium">
        <item name="background">@drawable/btn_dropdown</item>
        <item name="android:width">140dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:background">@drawable/btn_dropdown</item>
    </style>

    <style name="HnutiDuha.ListSpacer" parent="@Theme.HnutiDuhaTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:src">@color/DuhaListSpacerDarkGray</item>
    </style>

    <declare-styleable name="FlowLayout">
        <attr name="maxRowHeight" format="dimension" />
    </declare-styleable>

    <style name="Dialog" parent="@style/Theme.HnutiDuhaTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>