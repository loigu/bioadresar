<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/duha_border_green" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/DuhaBackgroundGray"
                android:gravity="center_vertical"
                android:minHeight="60dp" >

                <TextView
                    android:id="@+id/farmName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.8"
                    android:gravity="left"
                    android:text="Farm name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/White" />

                <ImageView
                    android:id="@+id/mapIcon"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:gravity="right"
                    android:scaleType="fitStart"
                    android:src="@drawable/to_map_icon" />

                <ImageView
                    android:id="@+id/bookmarkIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:gravity="right"
                    android:src="@android:drawable/btn_star_big_off"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/productionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/productionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/production"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/productionText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/duha_border_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activitiesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/activitiesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/activities"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/activitiesText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/duha_border_gray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/descriptionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/descriptionLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/description"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/descriptionText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="fill_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/duha_border_gray" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Black" />

                    <LinearLayout
                        android:id="@+id/phonesLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/phoneLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:minWidth="50dip"
                            android:text="@string/phone"
                            android:textColor="@color/Black" />

                        <LinearLayout
                            android:id="@+id/phoneListLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addressLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/addressLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dip"
                            android:text="@string/address"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/addressText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/webLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/webLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dip"
                            android:text="@string/web"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/webText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/eshopLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/eshopLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dip"
                            android:text="@string/eshop"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/eshopText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/emailLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/emailLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="50dip"
                            android:text="@string/email"
                            android:textColor="@color/Black" />

                        <TextView
                            android:id="@+id/emailText"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textColor="@color/DuhaTextGray" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView42"
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/duha_border_green" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>